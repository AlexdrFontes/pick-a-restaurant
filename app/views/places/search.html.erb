<%= render 'shared/menu' %>
<div class="col-xs-12" style= "padding: 0px">
  <div class="banner-container">
    <div class="banner-top">
      <%=  link_to (image_tag "http://res.cloudinary.com/dywzzd0as/image/upload/v1520856923/Group_2_1.svg", {class: "logo"}), root_path %>
      <div class="banner-top-image blur"></div>
        <div class="details">
          <%= form_for("search", :url => { :action => "show" }, :html => { :method => "GET"}) do |f| %>
          <h3> <%= "What do you want to eat?" %> </h3>
          <input type="hidden" name="meal_type" value=<%= @meal_type %> >
          <div class="form-group">
            <%= f.select( :cuisine_types, @unique_types, {}, {multiple: true, id: "selectize"}) %>
          </div>
          <h3> <%= "Where" %> </h3>
          <div class="form-group">
            <input class="form-control mr-sm-2" id="place_address"  type="text" name="place" placeholder="Largo do Chiado?" action="/places/show method="get" style="width: 220px;">
          </div>
          <div class="slidecontainer">
            <input class="form-control" type="range" min="0" max="30" step="0.1" value="1.5" name="radius" id="myRange" action="/places/show" method="get">
            <p>Distance km: <span id="demo"></span></p>
          </div>
          <script>
            var slider = document.getElementById("myRange");
            var output = document.getElementById("demo");
            output.innerHTML = slider.value;

            slider.oninput = function() {
              output.innerHTML = this.value;
            }
          </script>
          <div class="form-group">
            <h3>Average Cost For two</h3>
            <p>Min. Price<input class="form-control mr-sm-2" id="min_price" type="text" name="min_price" placeholder="0" action="/places/show method="get" style="width: 220px;"></p>
            <p>Max. Price<input class="form-control mr-sm-2" id="max_price" type="text" name="max_price" placeholder="0" action="/places/show method="get" style="width: 220px;"></p>
          </div>
          <button class="btn-bike-me" type="submit" method="get">Apply Filters</button>
          <% end %>
        </div>
      </div>
      <div class="banner-bottom blur">
      </div>
    </div>
  </div>
</div>

